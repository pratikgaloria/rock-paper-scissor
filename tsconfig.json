{
    "compilerOptions": {
      "baseUrl": "./src",
      "outDir": "./public",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "module": "es6",
      "moduleResolution": "node",
      "target": "es5",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "lib":[
          "es2015", "dom"
      ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.test.ts",
        "src/**/*.test.tsx"
    ]
  }